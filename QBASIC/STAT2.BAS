DEFDBL A-Z:DEFINT C,I,J
S=0:C=0:DIM D(1024)
INPUT "请输入文件名：",F$
OPEN F$ FOR INPUT AS #1
WHILE NOT EOF(1)
  INPUT #1,D(C)
  V=D(C):S=S+V:C=C+1
  IF C=1 THEN
    MIN=V:MAX=V
  ELSEIF V<MIN THEN
    MIN=V
  ELSEIF V>MAX THEN
    MAX=V
  END IF
WEND
CLOSE #1
PRINT "记录数： ";C
PRINT "总计：   ";S
PRINT "平均数： ";S/C
PRINT "最小值： ";MIN
PRINT "最大值： ";MAX
A=S/C:VAR=0
FOR I=0 TO C-1:VAR=VAR+(D(I)-A)^2:NEXT I
PRINT "标准差： ";SQR(VAR/C)
PRINT "标准差2：";SQR(VAR/(C-1))
FOR I=C-1 TO 0 STEP -1:FOR J=0 TO I-1
  IF D(J)>D(J+1) THEN
    T=D(J):D(J)=D(J+1):D(J+1)=T
  END IF
NEXT J:NEXT I
PRINT "中位数： ";
IF C AND 1 THEN PRINT D(C\2) ELSE PRINT D(C\2-1);D(C\2)
END