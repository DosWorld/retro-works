10 DEFINT A-Z: DEFDBL P,T
20 KEY OFF: SCREEN 1: COLOR 0, 2: CLS : PI = 3.141592654#
30 FOR I = 0 TO 360
40 T = I * 2 * PI / 360
50 X = INT(40 * (2 * SIN(T) - SIN(2 * T)) + 160)
60 Y = INT(40 * (-2 * COS(T) + COS(2 * T)) + 70)
70 IF I > 0 THEN LINE (X0, Y0)-(X, Y), 2
80 X0 = X: Y0 = Y
90 NEXT I
100 PAINT (160, 100), 2
110 WHILE INPUT$(1) = "": WEND
120 SCREEN 0: WIDTH 80: CLS : END

