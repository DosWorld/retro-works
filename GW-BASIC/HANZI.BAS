10 SCREEN 1:COLOR 0,15:DEFINT A-Z:DIM C(16),G(34):CLS
20 G(0)=32:G(1)=16:FOR I=0 TO 15:READ C(I):NEXT I
30 DATA 0,3,12,15,48,51,60,63,192,195,204,207,240,243,252,255
40 X=0:Y=0:D=0:A=0:B=0:P=VARPTR(D):Q=VARPTR(G(2)):ON ERROR GOTO 80
50 WHILE 1:READ X,Y:FOR I=0 TO 15:READ D
51 A=PEEK(P):B=PEEK(P+1)
60 POKE Q+I*4,C(A\16):POKE Q+I*4+1,C(A AND 15)
61 POKE Q+I*4+2,C(B\16):POKE Q+I*4+3,C(B AND 15)
70 NEXT I:PUT (X,Y),G,PSET:WEND
80 IF ERR<>4 THEN ON ERROR GOTO 0
90 WHILE INPUT$(1)="":WEND:CLS:SCREEN 0:END

