10 DEFDBL A-Z:DEFINT C,I,J
20 S=0:C=0:DIM D(1024)
30 WHILE 1:INPUT N$
40 IF N$="=" THEN GOTO 80 ELSE V=VAL(N$)
50 S=S+V:D(C)=V:C=C+1
60 IF C=1 THEN MIN=V:MAX=V ELSE IF V<MIN THEN MIN=V ELSE IF V>MAX THEN MAX=V
70 WEND
80 PRINT "CNT";C
90 PRINT "SUM";S
100 PRINT "AVG";S/C
110 PRINT "MIN";MIN
120 PRINT "MAX";MAX
130 A=S/C:VAR=0
140 FOR I=0 TO C-1
150 VAR=VAR+(D(I)-A)^2
160 NEXT I
170 PRINT "STDDEV";SQR(VAR/C)
180 PRINT "STDDEV2";SQR(VAR/(C-1))
190 FOR I=C-1 TO 0 STEP -1:FOR J=0 TO I-1
200 IF D(J)>D(J+1) THEN T=D(J):D(J)=D(J+1):D(J+1)=T
210 NEXT J:NEXT I
220 PRINT "MID";
230 IF C AND 1 THEN PRINT D(C\2) ELSE PRINT D(C\2-1);D(C\2)
240 END
